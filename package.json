{
  "name": "nabra-lavalink",
  "version": "1.0.0",
  "type": "module",
  "description": "Modern Discord music bot with Lavalink and play-dl hybrid support",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "deploy:guild": "node src/deploy-commands.js --scope=guild",
    "deploy:global": "node src/deploy-commands.js --scope=global",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write \"src/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\"",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "lavalink:start": "docker-compose up -d lavalink",
    "lavalink:stop": "docker-compose stop lavalink",
    "lavalink:run": "java -Xmx2G -jar ./Lavalink.jar",
    "logs": "tail -f logs/combined.log",
    "logs:error": "tail -f logs/error.log"
  },
  "keywords": [
    "discord",
    "music",
    "bot",
    "lavalink"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@discordjs/voice": "^0.17.0",
    "discord.js": "^14.16.3",
    "dotenv": "^16.4.5",
    "lavalink-client": "^2.6.2",
    "libsodium-wrappers": "^0.7.15",
    "node-fetch": "^3.3.2",
    "opusscript": "^0.0.8",
    "play-dl": "^1.9.7",
    "winston": "^3.15.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "eslint": "^9.17.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.4.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
